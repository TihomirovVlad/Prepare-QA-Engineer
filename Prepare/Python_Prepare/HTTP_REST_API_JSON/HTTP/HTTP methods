# CRUD операции:
GET     # Read - получить данные (БЕЗОПАСНЫЙ, ИДЕМПОТЕНТНЫЙ)
POST    # Create - создать новый ресурс (НЕ идемпотентный)
PUT     # Update - обновить весь ресурс (идемпотентный)
PATCH   # Update - частично обновить ресурс
DELETE  # Delete - удалить ресурс (идемпотентный)

# Примеры:
GET /users              # получить всех пользователей
POST /users             # создать пользователя
GET /users/123          # получить пользователя 123
PUT /users/123          # обновить ВСЕ поля пользователя 123
PATCH /users/123        # обновить НЕКОТОРЫЕ поля пользователя 123
DELETE /users/123       # удалить пользователя 123